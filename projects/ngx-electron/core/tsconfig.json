{
    "extends": "../../../tsconfig.json",
    "compilerOptions": {
        "outDir": "../../../dist/ngx-electron/core",
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "types": [],
        "lib": [
            "dom",
            "es2018"
        ]
    },
    "include": [
        "**/*",
        "./**/*.json"
    ],
    "exclude": [
        "src/test.ts",
        "**/*.spec.ts"
    ]
}
