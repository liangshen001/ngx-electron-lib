{
    "$schema": "http://json-schema.org/schema",
    "type": "object",
    "properties": {
        "browserTarget": {
            "type": "string",
            "description": "Target to serve.",
            "pattern": "^[^:\\s]+:[^:\\s]+(:[^\\s]+)?$"
        },
        "electronRoot": {
            "type": "string",
            "description": "electron root."
        },
        "config": {
            "type": "string",
            "description": "electron builder config."
        },
        "win": {
            "type": "boolean",
            "description": "win."
        },
        "mac": {
            "type": "boolean",
            "description": "mac."
        },
        "linux": {
            "type": "boolean",
            "description": "linux."
        }
    },
    "additionalProperties": false,
    "required": [
        "browserTarget",
        "electronRoot",
        "config"
    ]
}
